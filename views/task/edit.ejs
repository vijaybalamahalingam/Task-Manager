<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Update Task</h1>
  
    <div class="btn-toolbar mb-2 mb-md 0">
      <div class="btn-group me-2">
      <button class="btn btn-sm btn-outline-secondary">?</button>
      </div>
    </div>
</div>
  
<div class="col py-3">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item active"><%= task.taskName %></li>
                </ol>
            </nav>
        </div>
        <div class="col text-end fw-lighter">
            <b>Last updated: <%= task.updatedAt %> </b><br>
            <b>TaskId: <%= task._id %> </b>
        </div>
    </div>

    <form action="/edit/<%= task._id %>?_method=PUT" method="POST">
        <div class="row form-group mb-4">
            <div class="col">
                <label for="taskName">Task Name</label>
                <input type="text" class="form-control" id="taskName" name="taskName" value="<%= task.taskName %>" placeholder="Task Name" required>
            </div>
        
            <div class="form-group mb-4">
                <label for="details">Task Details</label>
                <textarea class="form-control" name="details" id="details" cols="30" rows="12" placeholder="Task Details"><%= task.details %></textarea>
            </div>
        
            <div class="form-group mb-4">
                <button type="submit" class="btn btn-primary">Update Task</button>

                <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete Task</button>
            </div>
        </div>
    </form>

    <div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="modal-title">You are about to remove a task.</div>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this task?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <form action="/edit/<%= task._id %>?_method=DELETE" method="POST" class="position-relative">
                        <button type="submit" class="btn btn-danger">Yes, Remove Task</button>
                    </form>
                </div>
            </div>
        </div>
    </div>    
</div>
